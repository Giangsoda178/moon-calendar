<%# Usage: render "mailers/shared/footer", social_links: [{ platform: "linkedin", url: "..." }] %>
<%# social_links uses platform names: linkedin, twitter, github, facebook, instagram, youtube %>
<table role="presentation" cellpadding="0" cellspacing="0" width="100%"
       style="border-top: 1px solid <%= email_colors[:border] %>;">
  <tr>
    <td style="padding: 24px 32px; text-align: center;">
      <% if local_assigns[:social_links].present? %>
        <div style="margin-bottom: 16px;">
          <%= render "mailers/shared/social_icons", links: social_links %>
        </div>
      <% end %>
      <p style="margin: 0 0 8px 0; color: <%= email_colors[:muted_foreground] %>; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif; font-size: 12px;">
        &copy; <%= Date.today.year %> Your Company. All rights reserved.
      </p>
      <p style="margin: 0; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif; font-size: 12px;">
        <a href="<%= @unsubscribe_url || '#' %>" style="color: <%= email_colors[:muted_foreground] %>; text-decoration: underline;">
          Unsubscribe
        </a>
        &nbsp;Â·&nbsp;
        <a href="<%= @privacy_url || '#' %>" style="color: <%= email_colors[:muted_foreground] %>; text-decoration: underline;">
          Privacy Policy
        </a>
      </p>
    </td>
  </tr>
</table>
