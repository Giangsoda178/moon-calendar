<h2 style="margin: 0 0 16px 0; color: <%= email_colors[:foreground] %>; font-size: 24px; font-weight: 600;">
  Status Update
</h2>

<p style="margin: 0 0 16px 0;">
  Hi <%= @user.respond_to?(:name) ? @user.name : "there" %>,
</p>

<p style="margin: 0 0 16px 0;">
  Your status has been updated:
</p>

<%= render "mailers/shared/card" do %>
  <table role="presentation" cellpadding="0" cellspacing="0" width="100%">
    <tr>
      <td style="padding: 4px 0; color: <%= email_colors[:muted_foreground] %>;">Previous:</td>
      <td style="padding: 4px 0; text-align: right; color: <%= email_colors[:foreground] %>;">
        <%= @status[:previous] || @status.try(:previous) || "N/A" %>
      </td>
    </tr>
    <tr>
      <td style="padding: 4px 0; color: <%= email_colors[:muted_foreground] %>;">New:</td>
      <td style="padding: 4px 0; text-align: right; font-weight: 600; color: <%= email_colors[:primary] %>;">
        <%= @status[:current] || @status.try(:current) || "N/A" %>
      </td>
    </tr>
  </table>
<% end %>

<%= render "mailers/shared/button", text: "View Details", url: @status[:url] || @status.try(:url) || "#", icon: :external_link %>
